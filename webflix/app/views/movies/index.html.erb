<style>
  h1 {
    border-bottom: solid 3px gray;
    margin-bottom: 24px;
  }
</style>

<p><%= link_to "Add a New Movie", "/movies/new" %></p>

<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Running Time</th>
    <th>Rating</th>
    <th></th>
  </tr>
  <% @movies.each do |movie| %>
    <tr>
      <td><%= link_to movie.title, "/movies/#{movie.id}" %></td>
      <td><%= movie.year %></td>
      <td><%= movie.runtime %> minutes</td>
      <td>
        <% movie.stars.times do %>
          &#9733;
        <% end %>
        <% (10 - movie.stars).times do %>
          &#9734;
        <% end %>
      </td>
      <td><%= link_to "Delete", "/movies/#{movie.id}/delete" %></td>
    </tr>
  <% end %>

</table>
